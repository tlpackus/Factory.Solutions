@{
  Layout = "_Layout";
}

@model List<Factory.Models.Engineer>;

<h1>Welcome to the Machine Repair Log!</h1>

@using Factory.Models;

<h1>Engineers</h1> 

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
}

<ul>
  @foreach (Engineer Engineer in Model)
  {
    <li>@Html.ActionLink($"{Engineer.Name}", "Details","Engineers", new { id = Engineer.EngineerId })</li>
  }
</ul>

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 

@foreach (Machine Machine in ViewBag.Machines)
{
  <li>@Html.ActionLink($"{Machine.Name}", "Details", "Machines", new { id = Machine.MachineId })</li>
}


<p>@Html.ActionLink("Add new Engineer", "Create", "Engineers")</p>
<p>@Html.ActionLink("Add new Machine", "Create", "Machines")</p>
